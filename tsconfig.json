{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers"],
      "@models/*": ["src/models"],
      "@routes/*": ["src/routes"],
      "*": ["node_modules/*"],
    }
  },
  "include": ["src/**/*", "ormconfig.ts"]
}
